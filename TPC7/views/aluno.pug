extends layout

block content
    .w3-card-4
      header.w3-container.w3-teal
        h3.w3-left Aluno 
      if aluno != null
       ul
        li 
         b Número de aluno: 
         | #{aluno.Número} 
        li
         b Nome: 
         | #{aluno.Nome}
        li
         b GitHub: 
         a(href=`${aluno.Git}`) #{aluno.Git}
        li
         b TPC's: 
          if aluno.tpc.length == 0
           | Aluno sem submissões!
          else 
           - var count = 1;
            ul
              each value in aluno.tpc
               li 
                b #{count}: 
                if value==0 
                 | Não submetido!
                else 
                 | Submetido!
                - count++
      else 
        div(class="w3-container")
           p Não foi possível encontrar o aluno ...     