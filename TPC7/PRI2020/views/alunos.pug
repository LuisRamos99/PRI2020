extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h3 Lista de Alunos
        if lista.length > 0 
            .w3-container
                table(class="w3-table-all")
                    tr 
                        th Número
                        th Nome
                        th Git
                    each b in lista
                        tr
                            td 
                              a(href=`/aluno/${b.Número}`) #{b.Número}
                            td= b.Nome
                            td= b.Git 
                            td
                              a(href=`/alunos/editar/${b.Número}`)
                                input(class="w3-btn w3-blue-grey" type="button" value="Editar")
                            td
                              form(action =`/alunos/${b.Número}?_method=DELETE` method='POST')  
                                button(class="w3-btn w3-blue-grey" type="submit") Eliminar
                a(href=`/alunos/registar` ) 
                    button(class="w3-btn w3-teal" type="submit" style="margin:20px") Registar aluno
                a(href=`/` ) 
                    button(class="w3-btn w3-teal" type="submit" style="margin:20px") Voltar ao inicio
        else
            div(class="w3-container")
                p Ainda não há alunos resgistados ... 
            footer(class="w3-container w3-teal")
                address Gerado por galuno :: 2020-Novembro, jcr